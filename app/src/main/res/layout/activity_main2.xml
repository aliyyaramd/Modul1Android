<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.studycase.Main2Activity">

    <TextView
        android:id="@+id/judul_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Makan Malam"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/hasil1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul_1"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/hasil3"
        android:layout_toStartOf="@+id/hasil3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hasil1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Menu"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/hasil2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/hasil1"
        android:layout_toRightOf="@+id/hasil1"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/porsi1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Harga"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/hasil3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/porsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/hasil2"
        android:layout_marginTop="40dp"
        android:text="Porsi"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/porsi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/porsi"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
